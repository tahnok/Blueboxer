<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="20dp"
    android:orientation="vertical"
    >
    <LinearLayout
        style="@style/button_row"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        >
        <Button
            android:id="@+id/button_1"
            android:text="1"
            style="@style/dial_button"
            />
        <Button
            android:id="@+id/button_2"
            android:text="2"
            style="@style/dial_button"
            />
        <Button
            android:id="@+id/button_3"
            android:text="3"
            style="@style/dial_button"
            />
        <Button
            android:id="@+id/button_2600"
            android:text="2600"
            style="@style/dial_button"
            />
    </LinearLayout>
    <LinearLayout
        style="@style/button_row"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        >
        <Button
            android:id="@+id/button_4"
            android:text="4"
            style="@style/dial_button"
            />
        <Button
            android:id="@+id/button_5"
            android:text="5"
            style="@style/dial_button"
            />
        <Button
            android:id="@+id/button_6"
            android:text="6"
            style="@style/dial_button"
            />
        <Button
            style="@style/dial_button"
            />
    </LinearLayout>
    <LinearLayout
        style="@style/button_row"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        >
        <Button
            android:id="@+id/button_7"
            android:text="7"
            style="@style/dial_button"
            />
        <Button
            android:id="@+id/button_8"
            android:text="8"
            style="@style/dial_button"
            />
        <Button
            android:id="@+id/button_9"
            android:text="9"
            style="@style/dial_button"
            />
        <Button
            style="@style/dial_button"
            />
    </LinearLayout>
    <LinearLayout
        style="@style/button_row"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        >
        <Button
            android:id="@+id/button_star"
            android:text="*"
            style="@style/dial_button"
            />
        <Button
            android:id="@+id/button_0"
            android:text="0"
            style="@style/dial_button"
            />
        <Button
            android:id="@+id/button_pound"
            android:text="#"
            style="@style/dial_button"
            />
        <Button
            android:text="Send"
            style="@style/dial_button"
            />
    </LinearLayout>
</LinearLayout>
